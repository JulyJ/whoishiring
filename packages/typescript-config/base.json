{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
